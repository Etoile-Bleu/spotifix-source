<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/dialog_background">

    <!-- Header avec gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_header_gradient"
        android:padding="24dp"
        android:gravity="center">

        <!-- IcÃ´ne de mise Ã  jour animÃ©e -->
        <ImageView
            android:id="@+id/update_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_update_sparkle"
            android:layout_marginBottom="16dp"
            android:contentDescription="Mise Ã  jour disponible" />

        <!-- Titre principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ Nouvelle mise Ã  jour !"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Sous-titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MathÃ©o Delbarre vous prÃ©sente"
            android:textSize="14sp"
            android:textColor="#E0FFFFFF"
            android:gravity="center" />

    </LinearLayout>

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Card de version -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F8F9FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_version_tag"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Version" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:textSize="12sp"
                        android:textColor="#6C757D"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v0.0.4"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/update_indicator"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Message de description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ¨ Une nouvelle version de Spotifix est disponible avec des amÃ©liorations et corrections de bugs.\n\nðŸš€ Souhaitez-vous installer cette mise Ã  jour maintenant ?"
            android:textSize="15sp"
            android:textColor="#495057"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"
            android:gravity="start" />

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#F8F9FA"
        android:gravity="end">

        <!-- Bouton Non -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas maintenant"
            android:textColor="#6C757D"
            android:layout_marginEnd="12dp"
            android:minWidth="100dp"
            app:cornerRadius="20dp" />

        <!-- Bouton Oui -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_install"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ Installer"
            android:textColor="@android:color/white"
            android:backgroundTint="#007BFF"
            android:minWidth="120dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_download"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>

</LinearLayout>
